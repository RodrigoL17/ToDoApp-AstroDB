---
import { db, Task } from 'astro:db';
import Layout from '../layouts/Layout.astro';

const tasks = await db.select().from(Task);
---

<Layout title="Welcome to Astro.">
		<h1>Hola mundo</h1>
		{
			tasks.map(task => (
				<p>{task.title}</p>
				<p>{task.description}</p>
				<p>{task.created_at}</p>
			))
		}
</Layout>

